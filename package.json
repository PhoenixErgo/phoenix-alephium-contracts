{
  "name": "@phoenix-finance/alephium-contracts",
  "version": "1.0.0",
  "scripts": {
    "compile": "npx --yes @alephium/cli@latest compile",
    "devcompile": "npx --yes @alephium/cli@latest compile -n devnet",
    "devdeploy": "npx --yes @alephium/cli@latest deploy -n devnet",
    "deploy": "npx --yes @alephium/cli@latest deploy",
    "format": "prettier --write src/**/*.ts scripts/**/*.ts test/**/*.ts",
    "test": "vitest run",
    "lint": "eslint ."
  },
  "exports": {
    ".": "./src/index.ts",
    "./contracts/*": "./src/contracts/*.ts",
    "./scripts": "./src/scripts.ts"
  },
  "devDependencies": {
    "@tsconfig/bun": "^1.0.3",
    "@types/bun": "^1.0.5",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^6.0.0",
    "eslint-plugin-import": "^2.29.1",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "1.3.0"
  },
  "dependencies": {
    "@alephium/cli": "^0.30.1",
    "@alephium/web3": "^0.30.1",
    "@alephium/web3-test": "^0.30.1"
  }
}
